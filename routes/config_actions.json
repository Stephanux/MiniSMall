    },
    "GET/formAtome": {
        "controler": "sql/selectSQL",
        "sql_query": "SELECT * FROM atome WHERE id=?",
        "view": "Atomes/formAtome",
        "form_action": "/modifyAtome",
        "del_label": "Atome",
        "libelle": "Modification",
